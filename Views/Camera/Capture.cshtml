@{
    ViewData["Title"] = "Camera";
}

<main class="container">
    <br />
    <div class="col-md-2"></div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                Camera
            </div>
            <div class="panel-body">
                <div id="my_camera"></div>
                <form>
                    <input type="button" value="Tirar Foto" class="btn btn-success" onclick="tirarFoto()" />
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                Imagem Capturada
            </div>
            <div class="panel-body">
                <div id="results">Suas fotos apararecerão aqui</div>
            </div>
            <br />
            <br />
        </div>
    </div>
    <div class="col-md-2"></div>
    <script src="~/webcamjs/webcam.js"></script>
    <script language="JavaScript">
        Webcam.set({
            with: 320,
            height: 240,
            image_format: 'jpeg',
            jpeg_quality: 90
        });
        Webcam.attach('#my_camera')
    </script>
    <script language="JavaScript">
        function tirarFoto() {
            Webcam.snap(function (data_uri) {
                document.getElementById('results').innerHTML = '<img src="' +
                    data_uri +
                    '"/>';
                Webcam.upload(data_uri,
                    '/Camera/Capture',
                    function (code, text) {
                    alert('Foto capturada');
                });
            });
        }
    </script>
</main>