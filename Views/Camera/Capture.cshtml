@{
    ViewData["Title"] = "Camera";
}

<main class="container">
    <br />
    <div class="col-md-2"></div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                Camera
            </div>
            <div class="panel-body">
                <div id="my_camera"></div>
                <form>

                    <input type="button" value="Tirar Foto" class="btn btn-success" onclick="tirarFoto()" />
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-2"></div>
    <script src="~/webcamjs/webcam.js"></script>
    <script language="JavaScript">
        Webcam.set({
            with: 320,
            height: 240,
            image_format: 'jpeg',
            jpeg_quality: 90
        });
        Webcam.attach('#my_camera')
    </script>
    <script language="JavaScript">
        function tirarFoto() {
            Webcam.snap(function (data_uri) {
                localStorage.setItem('data_uri', data_uri);
                window.location.replace("../Imagem/Index");
            });
        }
    </script>
</main>